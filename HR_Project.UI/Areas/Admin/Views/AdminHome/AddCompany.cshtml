<section id="contact" class="contact section-show">
    <div class="container">
        <div class="section-title">
            <h2>Registration</h2>
        </div>
        <form asp-action="AddCompany" asp-area="Admin" asp-controller="AdminHome" enctype="multipart/form-data" method="post" class="formDesign mt-4">
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="CompanyName">Company Name</label>
                        <input asp-for="CompanyName" type="text" class="form-control" placeholder="Company Name" required="">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <label asp-for="MersisNo">Mersis No</label>
                        <input asp-for="MersisNo" type="text" class="form-control" placeholder="Mersis No" required="">
                        <span asp-validation-for="MersisNo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="TaxNumber">Tax Number</label>
                        <input asp-for="TaxNumber" type="text" class="form-control" placeholder="Tax Number">
                        <span asp-validation-for="TaxNumber" class="text-danger"></span>

                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <label asp-for="TaxOffice">Tax Office</label>
                        <input asp-for="TaxOffice" type="text" class="form-control" placeholder="Tax Office">
                        <span asp-validation-for="TaxOffice" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="YearOfFoundation">Date Of Foundation</label>
                        <input asp-for="YearOfFoundation" class="dateInput form-control form-control-md" type="date" data-date="" data-date-format="DD MMMM YYYY">
                        <span asp-validation-for="YearOfFoundation" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <label asp-for="NumberOfEmployees">Number Of Employees</label>
                        <input asp-for="NumberOfEmployees" class="form-control form-control-md" />
                        <span asp-validation-for="NumberOfEmployees" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="CompanyTitle">Company Title</label>
                <select style="background-color:#FFFFFF14; color:white" class="optionColor form-select form-select-md" aria-label="Default select example" asp-for="CompanyTitle">
                    @foreach (var item in ViewBag.TitleList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="CompanyTitle" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label asp-for="ContractStartDate">Start Date Of Contract</label>
                        <input asp-for="ContractStartDate" class="dateInput form-control form-control-md" type="date" data-date="" data-date-format="DD MMMM YYYY">
                        <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        <label asp-for="ContractFinishDate">End Date Of Contract</label>
                        <input asp-for="ContractFinishDate" class="dateInput form-control form-control-md" type="date" data-date="" data-date-format="DD MMMM YYYY">
                        <span asp-validation-for="ContractFinishDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
